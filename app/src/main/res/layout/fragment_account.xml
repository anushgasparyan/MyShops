<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FBF4F4"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="#FBF4F4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/person"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/changephoto"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:text="@string/change_photo"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/deletephoto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/myalerts"
                    android:text="x"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namesurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="cursive"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#333333" />

    <Button
        android:id="@+id/myproducts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/myproducts"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  My products"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/favorites"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/heart"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  Favorites"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/myorders"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/orders"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  My orders"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/basket"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/shop"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  Basket"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/ic_baseline_notifications_24"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  Notifications"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/card"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  My cards"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/settings"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  Settings"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="#FBF4F4"
        android:drawableLeft="@drawable/logout"
        android:fontFamily="cursive"
        android:gravity="left|center_vertical"
        android:text="  Sign out"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />


</LinearLayout>