<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">

        <item name="colorPrimary">#E6DDDF</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
    <style name="Theme.MyFancyTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:homeAsUpIndicator">@drawable/black_arrow</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorControlNormal">#000000</item>
        <item name="android:background">#EADDDD</item>
        <item name="android:colorAccent">#000000</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="AlertDialogCustom" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">#000000</item>
        <item name="android:background">#EADDDD</item>
        <item name="android:colorAccent">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>