<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myshops.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.myshops.ui.search.SearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_basket"
        android:name="com.example.myshops.ui.basket.BasketFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_basket" />

    <fragment
        android:id="@+id/navigation_addProduct"
        android:name="com.example.myshops.ui.addProduct.AddProductFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_addproduct" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.myshops.ui.account.AccountFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_account" />

</navigation>